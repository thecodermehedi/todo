{
 "scripts": {
  "install:frontend": "cd frontend && bun install",
  "install:backend": "cd backend && bun install",
  "install": "concurrently \"bun install:frontend\" \"bun install:backend\"",
  "start:frontend": "cd frontend && bun run dev",
  "start:backend": "cd backend && bun run dev",
  "start": "concurrently \"bun start:frontend\" \"bun start:backend\""
 },
 "dependencies": {
  "concurrently": "^9.1.0"
 }
}
